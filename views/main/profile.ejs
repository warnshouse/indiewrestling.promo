<%- include('../partials/header') -%>
    <div class="container">
      <div class="row mt-5">
        <div class="col-6">
          <div>
            <% if (locals.messages.errors) { %> <% messages.errors.forEach(el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
            <% }) %> <% } %> <% if (locals.messages.info) { %> <%
            messages.info.forEach(el => { %>
            <div class="alert alert-info"><%= el.msg %></div>
            <% }) %> <% } %>
            <p><strong>User Name</strong>: <%= profileuser.userName %></p>
            <% if (profileuser.avatarImage) { %>
              <img class="w-25" src="<%= profileuser.avatarImage %>">
            <% } %>
            <% if (profileuser.id === user.id) { %>
            <p><strong>Email</strong>: <%= profileuser.email %></p>
            <form action="/profile/avatar?_method=PUT" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Upload avatar:</label>
                <input type="file" class="form-control" id="imageUpload" name="file" accept="image/png, image/jpeg, image/gif">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
            <% } else { %>
            <form
              class="col-1"
              action="/follow/<%= profileuser.id %>?_method=PUT"
              method="POST"
            >
              <button class="btn btn-primary" type="submit">
                <% if (!isfollowing) { %>
                Follow
                <% } else { %>
                Following
                <% } %>
              </button>
            </form>
            <% } %>
          </div>
          <% if (profileuser.id === user.id) { %>
          <div class="mt-5">
            <h2>Add a post</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Caption</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file" accept="image/png, image/jpeg, image/gif">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
          <% } %>
        </div>
        <div class="col-6">
          <ul class="row list-unstyled">
            <% for (let i = 0; i < posts.length; i++) { %>
            <li class="col-6 justify-content-between mt-5">
              <a href="/post/<%= posts[i]._id %>">
                <img class="img-fluid" src="<%= posts[i].image %>">
              </a>
            </li>
            <% } %>
          </ul>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/feed">Return to Feed</a>
          </div>  
        </div>  
      </div>
    </div>
<%- include('../partials/footer') -%>