<%- include('../partials/header') -%>
    <div class="container">
      <div class="row justify-content-center mt-5">
        <div class="col-6">
          <h2><%= promo.name %></h2>
          <img class="img-fluid" src="<%= promo.image %>" />
          <div class="row justify-content-between">
            <% if (user) { %>
            <form
              class="col-1"
              action="/post/likePost/<%= promo.id %>?_method=PUT"
              method="POST"
            >
              <button class="btn btn-primary fa fa-heart" type="submit"></button>
            </form>
            <% } %>
            <h3 class="col-3"><%= promo.followers %> Followers</h3>
            <% if (user && promo.addedBy == user.id) { %>
            <form
              action="/post/deletePost/<%= promo.id %>?_method=DELETE"
              method="POST"
              class="col-3"
            >
              <button class="btn btn-primary fa fa-trash" type="submit"></button>
            </form>
            <% } %>
          </div>
        </div>
        <div class="col-3 mt-5">
          <p><%= promo.description %></p>
          <p><%= promo.city %>, <%= promo.state %></p>
        </div>
        <div class="col-6 mt-5">
          <a class="btn btn-primary" href="/profile">Return to Profile</a>
          <a class="btn btn-primary" href="/promos">Return to Promotion List</a>
        </div>
      </div>
    </div>
<%- include('../partials/footer') -%>