<%- include('../partials/header') -%>
    <div class="container">
      <div class="row justify-content-center mt-5">
        <div class="col-6">
          <h2><%= promo.promoName %></h2>
          <img class="img-fluid" src="<%= promo.image %>" />
          <div class="row justify-content-between">
            <form
              class="col-1"
              action="/promos/follow/<%= promo.id %>?_method=PUT"
              method="POST"
            >
              <button class="btn btn-primary" type="submit">
                <% if (!isFollowing) { %>
                Follow
                <% } else { %>
                Following
                <% } %>
              </button>
            </form>
          </div>
        </div>
        <div class="col-3 mt-5">
          <p><%= promo.description %></p>
          <p><%= promo.city %>, <%= promo.state %></p>
          <p>Owned by: <a href="/profile/<%= promo.ownedBy %>"><%= promo.ownedBy %></a></p>
        </div>
        <div class="col-6 mt-5">
          <a class="btn btn-primary" href="/profile">Return to Profile</a>
          <a class="btn btn-primary" href="/promos">Return to Promotion List</a>
        </div>
      </div>
    </div>
<%- include('../partials/footer') -%>